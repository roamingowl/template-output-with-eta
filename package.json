{
  "name": "@roamingowl/template-output",
  "description": "Template rendering GitHub actions",
  "version": "1.1.1",
  "author": "romaingowl",
  "private": true,
  "homepage": "https://github.com/roamingowl/template-output",
  "repository": {
    "type": "git",
    "url": "git@github.com:roamingowl/template-output.git"
  },
  "bugs": {
    "url": "https://github.com/roamingowl/template-output"
  },
  "keywords": [
    "actions",
    "node",
    "template"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package && npm run build-license",
    "ci-test": "jest --coverage",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "eslint . -c .eslintrc.yml",
    "package": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js",
    "build-license": "generate-license-file --input package.json --output dist/licenses.txt --overwrite",
    "package:watch": "npm run package -- --watch",
    "test": "jest"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "1.10.1",
    "@date-fns/utc": "1.2.0",
    "date-fns": "3.6.0",
    "dotenv": "16.4.5",
    "eta": "3.5.0",
    "yaml": "2.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.2.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.1",
    "esbuild": "^0.23.0",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "generate-license-file": "^3.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  }
}
